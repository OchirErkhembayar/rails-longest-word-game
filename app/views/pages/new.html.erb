<h3>Create the longest word using the following letters!</h3>


<ul style="text-align: center;"><% @array.each do |letter| %>
<li><p><%= letter %></p></li>
<% end %></ul>


<form action="/score" method="post">
  <input type="text" name="answer" placeholder="Answer?">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @array %>
</form>
