<h2>Play!</h2>

<div class="letters">
  <h2 style="letter-spacing: 15px; text-align: center;"><% @array.each do |letter| %>
  <tr><%= letter %></tr>
  <% end %></h2>
</div>

<form action="/score" method="post">
  <input type="text" name="answer" placeholder="Answer?">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @array %>
</form>
